#Guess the Word
#23Mar2024
import random
name=input("What is your name? ")
print("All the best ",name)
words = ['rainbow', 'computer', 'science', 'programming',
         'python', 'mathematics', 'player', 'condition',
         'reverse', 'water', 'board', 'geeks']
randomWord= random.choice(words)
print("Guess the characters")
guesses=""
totalTurns=12
while totalTurns>0:
    guess = input("Guess the character:")
    guesses+=guess
    failed=0
    for char in randomWord:
        if char in guesses:
            print(char,end=" ")
        else:
            failed+=1
    if failed==0:
        print("\n !!You Win!!, the word is ",randomWord)
        break
    print()
    if guess not in randomWord:
        totalTurns-=1
        print("Wrong, You have ",totalTurns," turns left")
if totalTurns==0:
    print("You Failed, the word was :",randomWord)
